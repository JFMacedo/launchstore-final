{% extends "layout.njk" %}
{% import "parts/card.njk" as cards %}

{% block content %}

{% call cards.render('', 'order-success container') %}
  <div class="success-lottie"></div>
  <h2>Pedido realizado com sucesso!</h2>
  <p>Aguarde a resposta do vendedor no seu email cadastrado.</p>
  <a href="/products/search">Comprar mais</a>
{% endcall %}

<script src="/assets/lottie.min.js"></script>
<script>
  lottie.loadAnimation({
    container: document.querySelector('.success-lottie'),
    renderer: 'svg',
    loop: false,
    autoplay: true,
    path: '/assets/13540-sign-for-success-alert.json'
  })
</script>

{% endblock %}