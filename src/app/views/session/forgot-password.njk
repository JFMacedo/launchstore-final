{% extends "layout.njk" %}

{% import "parts/card.njk" as card %}

{% block content %}
  {% call card.render('Esqueceu a senha?', 'forgot-password container form') %}
    <form action="/users/forgot-password" method="POST">
      <div class="fields">
        <div class="item">
          <div class="input">
            <label for="email">Email</label>
            <input type="email"
              name="email"
              id="email"
              value="{{ user.email }}"
              onblur="Validate.apply(this, 'isEmail')"
              placeholder="Digite o email cadastrado"
            >
          </div>
        </div><!--item-->
      </div><!--fields-->

      <button class="button" type="submit">Recuperar senha</button>
    </form>
  {% endcall %}
{% endblock %}