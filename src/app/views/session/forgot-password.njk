{% extends "layout.njk" %}

{% block content %}
  <section class="forgot-password container form">
    <form action="/users/forgot-password" method="POST">
      <div class="header">
        <h3>Esqueceu a senha?</h3>
      </div><!--header-->

      <div class="fields">
        <div class="item">
          <div class="input">
            <label for="email">Email</label>
            <input type="email"
              name="email"
              id="email"
              value="{{ user.email }}"
              onblur="Validate.apply(this, 'isEmail')"
              placeholder="Digite o email cadastrado"
            >
          </div>
        </div><!--item-->
      </div><!--fields-->

      <button class="button" type="submit">Recuperar senha</button>
    </form>
  </section><!--form-->
{% endblock %}