<header>
  <div class="container">
    <a href="/">
      <div class="logo">
        <h1>Launchstore</h1>
        <h2>COMPRA E VENDA</h2>
      </div><!--logo-->
    </a><!--/-->

    <form class="search" action="/products/search" method="GET">
      <input
        type="text"
        name="filter"
        placeholder="Buscar por produtos"
        {% if search.term %}
          value={{search.term}}
        {% endif %}
      >
    </form><!--search-->

    <nav class="primary">
      <ul>
        <li>
          <a href="/ads/create">
            <i class="material-icons">add</i>
            Novo Anúncio
          </a><!--create-->
        </li>

        <li class="accounts">
          <a href="/accounts">
            <i class="material-icons">account_circle</i>
            Minha Conta
          </a><!--accounts-->
          {% if user %}  
            <ul class="submenu">
              <li>
                <a href="/users">Configuralções</a>
              </li>
              <li>
                <a href="/buying">Meus pedidos</a>
              </li>
              <li>
                <a href="/selling">Minhas vendas</a>
              </li>
              <li>
                <form action="/user/logout" method="POST">
                  <button>Sair</button>
                </form>
              </li>
            </ul>
          {% endif %}
        </li>
      </ul>
    </nav><!--primary-->
  </div><!--container-->
</header>