<header>
  <div class="container">
    <a href="/">
      <div class="logo">
        <h1>Launchstore</h1>
        <h2>COMPRA E VENDA</h2>
      </div><!--logo-->
    </a><!--/-->

    <form class="search" action="/products/search" method="GET">
      <input
        type="text"
        name="filter"
        placeholder="Buscar por produtos"
        {% if search.term %}
          value={{search.term}}
        {% endif %}
      >
    </form><!--search-->

    <nav class="primary">
      <ul>
        <li>
          <a href="/ads/create">
            <i class="material-icons">add</i>
            Novo An√∫ncio
          </a><!--create-->
        </li>

        {% if session.userId %}
          <li class="accounts loged">
            <a href="/users">
              <i class="material-icons">account_circle</i>
              Minha Conta
            </a><!--accounts-->
            <ul class="submenu">
              <li>
                <a href="/buying">Meus pedidos</a>
              </li>
              <li>
                <a href="/selling">Minhas vendas</a>
              </li>
              <li>
                <form action="/users/logout" method="POST">
                  <button>Sair</button>
                </form>
              </li>
            </ul>
          </li>
        {% else %}
          <li>
            <a href="/accounts">
              <i class="material-icons">account_circle</i>
              Minha Conta
            </a><!--accounts-->
          </li>
        {% endif %}
      </ul>
    </nav><!--primary-->
  </div><!--container-->
</header>